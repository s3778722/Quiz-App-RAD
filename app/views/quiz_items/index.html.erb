<p id="notice"><%= notice %></p>

<h1>Quiz Items</h1>

<table>
  <thead>
    <tr>
      <th>Qid</th>
      <th>Question</th>
      <th>Description</th>
      <th>Answers</th>
      <th>Multiple correct answers</th>
      <th>Correct answers</th>
      <th>Explanation</th>
      <th>Tip</th>
      <th>Tags</th>
      <th>Category</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_items.each do |quiz_item| %>
      <tr>
        <td><%= quiz_item.qid %></td>
        <td><%= quiz_item.question %></td>
        <td><%= quiz_item.description %></td>
        <td><%= quiz_item.answers %></td>
        <td><%= quiz_item.multiple_correct_answers %></td>
        <td><%= quiz_item.correct_answers %></td>
        <td><%= quiz_item.explanation %></td>
        <td><%= quiz_item.tip %></td>
        <td><%= quiz_item.tags %></td>
        <td><%= quiz_item.category %></td>
        <td><%= quiz_item.difficulty %></td>
        <td><%= link_to 'Show', quiz_item %></td>
        <td><%= link_to 'Edit', edit_quiz_item_path(quiz_item) %></td>
        <td><%= link_to 'Destroy', quiz_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

